@model MvcPersonajesExamenGio.Models.Personaje

@{
    ViewData["Title"] = "DetailsPersonaje";
}

<h1>Details Personaje</h1>

<div>
    <h4>Personaje: '@Model.Nombre'</h4>
    <dl class="row">
        <dt class = "col-sm-2">IdPersonaje</dt>
        <dd class = "col-sm-10">
            @Model.IdPersonaje
        </dd>

        <dt class = "col-sm-2">Imagen</dt>
        <dd class = "col-sm-10">
            <img src="@Model.Imagen" width="400" />
        </dd>

        <dt class = "col-sm-2">IdSerie</dt>
        <dd class = "col-sm-10">
            @Model.IdSerie
        </dd>
    </dl>
</div>

<a asp-controller="Personajes" asp-action="UpdatePersonaje" asp-route-idPersonaje="@Model.IdPersonaje" class="btn btn-warning my-2">
    Editar Personaje
</a>

<a asp-controller="Personajes" asp-action="GetPersonajes" class="btn btn-secondary my-2">
    Volver
</a>